<mvc:View
	controllerName="view.forecasts.Workbench"
	xmlns="sap.m"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<SplitContainer
		id="idWorkbenchSplitContainer">
    <masterPages>
      <Page
        id="idWorkbenchMasterPage"
				title="Forecast workbench"
				showHeader="true">
				<customHeader>
					<Toolbar
						id="idWorkbenchMasterToolbar">
						<Button
							id="idWorkbenchMasterHomeButton"
							icon="sap-icon://home"
							press="onNavBackPress" />
						<Title
							id="idWorkbenchMasterTitle"
							textAlign="Center"
							text="Catalog"
							width="100%" />
						<!-- This button is only activated when navigating through folders -->
						<Button
							id="idWorkbenchMasterUpButton"
							icon=""
							text=""
							press="onMasterUpPress" />
					</Toolbar>
				</customHeader>
				<content>
					<!-- TODO Localisation for no data text -->
					<List
						id="idWorkbenchMasterList"
						enableBusyIndicator="false"
						itemPress="onMasterListItemPress"
						mode="SingleSelectMaster">
						<items>
							<StandardListItem
								id="idFoldersListItem"
								adaptTitleSize="true"
								icon="sap-icon://folder-blank"
								title="Folders"
								type="Active">
								<customData>
									<core:CustomData
										key="route"
										value="folders" />
								</customData>
							</StandardListItem>
							<StandardListItem
								id="idRecentsListItem"
								adaptTitleSize="true"
								icon="sap-icon://FontAwesome/clock-o"
								title="Recent"
								type="Active">
								<customData>
									<core:CustomData
										key="route"
										value="recents" />
								</customData>
							</StandardListItem>
							<StandardListItem
								id="idFavoritesListItem"
								adaptTitleSize="true"
								icon="sap-icon://favorite"
								title="Favourites"
								type="Active">
								<customData>
									<core:CustomData
										key="route"
										value="favorites" />
								</customData>
							</StandardListItem>
							<StandardListItem
								id="idSearchListItem"
								adaptTitleSize="true"
								icon="sap-icon://search"
								title="Search"
								type="Active">
								<customData>
									<core:CustomData
										key="route"
										value="search" />
								</customData>
							</StandardListItem>
						</items>
					</List>
				</content>
      </Page>
    </masterPages>
    <detailPages>
			<!-- TODO localisation of text -->
			<Page
				id="idWorkbenchLoadingPage"
				showHeader="false"
				showNavButton="false"
				title="">
				<html:div
					class="ffaBusyIndicatorPush" />
	      <BusyIndicator
					size="{= ${device>isTouch} &amp;&amp; ${device>isNoPhone} ? '3.4em' : ${device>isPhone} ? '2.6em' : '4.6em' }"
					class="ffaBusyIndicatorCenter" />
			</Page>
    </detailPages>
	</SplitContainer>
</mvc:View>
