<mvc:View
	controllerName="view.forecasts.Recents"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		id="idRecentForecastsPage"
		title="Recent forecasts"
		enableScrolling="false"
		showNavButton="false"
		navButtonPress="onNavUpPress">
		<footer>
			<Toolbar
				id="idRecentForecastsToolbar">
			</Toolbar>
		</footer>
		<content>
			<TileContainer
				id="idRecentForecastsTileContainer"
				allowAdd="false" />
			<!-- No forecasts message page -->
			<core:Fragment
				id="idRecentsNoForecastsFragment"
				fragmentName="view.forecasts.NoForecasts"
				type="XML" />
		</content>
	</Page>
</mvc:View>
