<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core">
	<ResponsivePopover
		class="sapUiPopupWithPadding"
		modal="true"
		showHeader="false"
		placement="Bottom"
		width="70%"
		horizontalScrolling="false"
		verticalScrolling="false">
        <beginButton>
           <Button
        		icon="sap-icon://accept"
        		tooltip="Done"
        		press="onSliderDone"
        		class="ffaEmphasizedBtn"/>
        </beginButton>
        <endButton>
        	<Button
        		icon="sap-icon://decline"
        		tooltip="Cancel"
        		press="onSliderCancel" />
        </endButton>
		<content>
  			<l:VerticalLayout
  				class="sapUiContentPadding">
				<HBox>
					<core:Icon
						id="idSliderColorIcon"
						src="sap-icon://line-charts"
						size="1.3rem"/>
					<Label
						id="idGainPopoverLabel"
						text="{= ${range>/selected} === 1 ? 'Applying change to 1 point on the plot line' : 'Applying change to ' + ${range>/selected} + ' points on the plot line'}"
						width="300px"
						textAlign="End"
						class="ffaPaddingTop5px"/>
				</HBox>
				<!--
					The slider must be bound to appropriate values of the series
					do this in the controller when the fragment is init'd
				-->
				<HBox>
					<Slider
						id="idSlider"
						tooltip="Series gain"
						min="-50"
						max="50"
						step="0.01"
						value="0"
						width="400px"
						liveChange="onSliderLiveChange"
						change="onSliderChange"/>
					<Input
						id="idSliderInput"
						description="%"
						fieldWidth="75px"
						maxLength="0"
						type="Number"
						placeholder="0.000"
						liveChange="onSliderInputLiveChange"
						change="onSliderInputChange" />
				</HBox>
			</l:VerticalLayout>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>
