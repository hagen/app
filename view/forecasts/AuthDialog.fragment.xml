<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Dialog
		title="Authentication required"
		horizontalScrolling="false"
		verticalScrolling="false"
		showHeader="true">
		<beginButton>
			<Button
				id="idAuthSave"
				text="OK"
				press="onAuthSavePress"/>
		</beginButton>
		<endButton>
			<Button
				text="Cancel"
				press="onAuthCancelPress"/>
		</endButton>
		<content>
			<form:SimpleForm
				id="idAuthForm"
				minWidth="800"
				maxContainerCols="1"
				editable="true"
				layout="ResponsiveGridLayout"
				labelSpanL="4"
				labelSpanM="3"
				emptySpanL="4"
				emptySpanM="4"
				columnsL="1"
				columnsM="1"
				class="editableForm">
				<form:content>
					<Label
						text="Username"
						required="true"/>
					<Input
						id="idUsernameInput"
						type="Text"/>

					<Label
						text="Password"
						required="true"/>
					<Input
						id="idPasswordInput"
						type="Password"/>

					<Label
						text=""/>
					<CheckBox
						id="idRememberCheckBox"
						selected="false"
						text="Remember username &amp; password?" />
				</form:content>
			</form:SimpleForm>
		</content>
	</Dialog>
</core:FragmentDefinition>
