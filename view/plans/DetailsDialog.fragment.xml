<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <Dialog
    id="idPlanDetailsDialog"
    title="{plans>plan}">
    <beginButton>
      <Button
        id="idPlansBeginButton"
        text="{plans>button}"
        press="onPlanDetailsGoPress"/>
    </beginButton>
    <endButton>
      <Button
        id="idPlansFreeBeginButton"
        text="Close"
        press="onPlansFreeClosePress"/>
    </endButton>
    <content>
      <List
        id="idPlanDetailsList"
        listMode="None"
        items="{plans>details}">
        <StandardListItem
    			title="{plans>text}"
    			icon="sap-icon://{plans>icon}"
    			info="{plans>info}"
    			infoState="{= ${plans>color} === 'green' ? 'Success' : 'Warning' }"
    			type="Inactive">
          <customData>
            <core:CustomData
              key="color"
              value="{plans>color}" />
          </customData>
        </StandardListItem>
      </List>
    </content>
  </Dialog>
</core:FragmentDefinition>
