<mvc:View
	controllerName="view.data.Redshift"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Page
		enableScrolling="false"
		showHeader="true">
		<customHeader>
			<Toolbar>
				<Button
					id="idCancelButton"
					text="Cancel"
					press="onCancelPress" />
				<ToolbarSpacer />
				<Title
					textAlign="Center"
					text="Configure connection" />
				<ToolbarSpacer />
				<Text
					text="" />
			</Toolbar>
		</customHeader>
		<footer>
			<Toolbar>
				<Button
					id="idBackButton"
					text="Back"
					enabled="false"
					press="onBackPress" />
				<ToolbarSpacer />
				<Button
					id="idNextButton"
					text="Next"
					enabled="true"
					press="onNextPress" />
			</Toolbar>
		</footer>
		<NavContainer
			id="idNavContainer">
			<pages>
				<Page
					id="idPage1"
					showHeader="false"
					enableScrolling="true">
					<l:Grid
		        defaultSpan="L12 M12 S12"
		        width="auto">
		        <l:content>
		          <f:SimpleForm
		            id="idRedshiftConfigForm"
		            maxContainerCols="2"
		            editable="true"
		            layout="ResponsiveGridLayout"
		            labelSpanL="3"
		            labelSpanM="3"
		            emptySpanL="3"
		            emptySpanM="3"
		            columnsL="1"
		            columnsM="1"
		            class="editableForm sapUiMediumMarginTop">
		            <f:content>
		              <Label
		                text="Dataset name"
										required="true" />
		              <Input
		                id="idRedshiftNameInput"
										value="{redshift>/name}"
										change="onInputChange">
										<customData>
											<core:CustomData key="error" value="Please supply a data set name" />
										</customData>
		              </Input>

		              <Label
		                text="Redshift endpoint"
										required="true" />
		              <Input
		                id="idRedshiftEndpointInput"
										value="{redshift>/endpoint}"
										placeholder="e.g. cluster.c63cnbrlgreen.ap-southeast-3.redshift.amazonaws.com"
										change="onInputChange">
										<customData>
											<core:CustomData key="error" value="Please supply the Redshift endpoint (hostname)" />
										</customData>
		              </Input>

									<Label
		                text="Port"
										required="true" />
		              <Input
		                id="idRedshiftPortInput"
										value="{redshift>/port}"
										type="Number"
										placeholder="e.g. 5439"
										change="onInputChange">
										<customData>
											<core:CustomData key="error" value="Please supply the endpoint port number" />
										</customData>
		              </Input>

									<Label
		                text="Database"
										required="true" />
		              <Input
		                id="idRedshiftDatabaseInput"
										value="{redshift>/database}"
										change="onInputChange">
										<customData>
											<core:CustomData key="error" value="Please supply a Redshift database name" />
										</customData>
		              </Input>

									<Label
		                text="User name" />
		              <Input
		                id="idRedshiftUsernameInput"
										value="{redshift>/username}">
		              </Input>

									<Label
		                text="Password" />
		              <Input
		                id="idRedshiftPasswordInput"
										value="{redshift>/password}"
										type="Password">
		              </Input>

									<Label
										text="" />
									<CheckBox
										id="idRedshiftRememberPasswordCheckBox"
										selected="{redshift>/remember}"
										text="Save username &amp; password?"/>

									<Label
										text="Query method" />
									<Select
										id="idQueryMethodSelect"
										value="{redshift>/query_type}">
										<items>
											<core:Item key="views" text="Redshift View" />
											<core:Item key="tables" text="Redshift Table" />
											<core:Item key="query" text="Write custom SQL query" />
										</items>
									</Select>
									<Button
										id="idHelpButton"
										type="Transparent"
										icon="sap-icon://FontAwesome/question-circle"
										press="onHelpPress">
										<layoutData>
											<l:GridData
												span="L1 M1 S1" />
										</layoutData>
									</Button>
		            </f:content>
		          </f:SimpleForm>

							<f:SimpleForm
		            id="idRedshiftTestConsoleForm"
		            maxContainerCols="1"
		            editable="true"
		            layout="ResponsiveGridLayout"
		            labelSpanL="3"
		            labelSpanM="3"
		            emptySpanL="4"
		            emptySpanM="4"
		            columnsL="1"
		            columnsM="1"
		            class="editableForm sapUiMediumMarginTop">
		            <f:content>
									<TextArea
										id="idTestConsoleTextArea"
										rows="5"
										columns="20"
										visible="true"
										value="Console..."
										enabled="false">
										<layoutData>
											<l:GridData
												span="L12 M12 S12" />
										</layoutData>
									</TextArea>
		            </f:content>
		          </f:SimpleForm>
		        </l:content>
		      </l:Grid>
				</Page>

				<!--
				██████╗ ██╗   ██╗███████╗██████╗ ██╗   ██╗
			 ██╔═══██╗██║   ██║██╔════╝██╔══██╗╚██╗ ██╔╝
			 ██║   ██║██║   ██║█████╗  ██████╔╝ ╚████╔╝
			 ██║▄▄ ██║██║   ██║██╔══╝  ██╔══██╗  ╚██╔╝
			 ╚██████╔╝╚██████╔╝███████╗██║  ██║   ██║
			  ╚══▀▀═╝  ╚═════╝ ╚══════╝╚═╝  ╚═╝   ╚═╝
			  -->

				<Page
					id="idPageQuery"
					enableScrolling="false"
					showHeader="false">
					<l:Grid
		        defaultSpan="L12 M12 S12"
		        width="auto">
		        <l:content>
		          <f:SimpleForm
		            id="idRedshiftQueryForm"
		            maxContainerCols="1"
		            editable="true"
		            layout="ResponsiveGridLayout"
		            labelSpanL="3"
		            labelSpanM="3"
		            emptySpanL="4"
		            emptySpanM="4"
		            columnsL="1"
		            columnsM="1"
		            class="editableForm">
		            <f:content>
		              <Label
		                text="Please also supply an SQL query to run against the database. This
										query will form the basis of your data set">
										<layoutData>
											<l:GridData
												span="L12 M12 S12" />
										</layoutData>
									</Label>
		              <TextArea
		                id="idQueryTextArea"
										rows="5"
										columns="20"
										value="{redshift>/query}"
										placeholder="e.g. select * from data_table">
										<layoutData>
											<l:GridData
												span="L12 M12 S12" />
										</layoutData>
									</TextArea>
									<Button
										id="idRedshiftTestButton"
										press="onQueryPress"
										type="Emphasized"
										text="Test">
										<layoutData>
											<l:GridData
												span="L12 M12 S12" />
										</layoutData>
									</Button>
		            </f:content>
		          </f:SimpleForm>

							<f:SimpleForm
		            id="idRedshiftConsoleForm"
		            maxContainerCols="1"
		            editable="true"
		            layout="ResponsiveGridLayout"
		            labelSpanL="3"
		            labelSpanM="3"
		            emptySpanL="4"
		            emptySpanM="4"
		            columnsL="1"
		            columnsM="1"
		            class="editableForm">
		            <f:content>
									<TextArea
										id="idSaveConsoleTextArea"
										rows="10"
										columns="20"
										visible="true"
										value="Console..."
										enabled="false">
										<layoutData>
											<l:GridData
												span="L12 M12 S12" />
										</layoutData>
									</TextArea>
		            </f:content>
		          </f:SimpleForm>
		        </l:content>
		      </l:Grid>
				</Page>

				<!--
				██╗   ██╗██╗███████╗██╗    ██╗███████╗
				██║   ██║██║██╔════╝██║    ██║██╔════╝
				██║   ██║██║█████╗  ██║ █╗ ██║███████╗
				╚██╗ ██╔╝██║██╔══╝  ██║███╗██║╚════██║
				 ╚████╔╝ ██║███████╗╚███╔███╔╝███████║
				  ╚═══╝  ╚═╝╚══════╝ ╚══╝╚══╝ ╚══════╝
				-->

				<Page
					id="idPageViews"
					enableScrolling="false"
					showHeader="false">
					<l:Grid
		        defaultSpan="L12 M12 S12"
		        width="auto">
						<l:content>
							<Panel
								expandable="false"
								headerText="">
								<Text
									text="Select a database view from those listed below. Either begin typing the name of the view
									or select from the drop-down. It's important to ensure your	database user has privileges to read
									from the view you select here." />
							</Panel>
		          <f:SimpleForm
		            id="idRedshiftViewForm"
		            maxContainerCols="1"
		            editable="true"
		            layout="ResponsiveGridLayout"
		            labelSpanL="3"
		            labelSpanM="3"
		            emptySpanL="4"
		            emptySpanM="4"
		            columnsL="1"
		            columnsM="1"
		            class="editableForm">
		            <f:content>
									<Label text="">
										<layoutData>
											<l:GridData span="L3 M3 S1" />
										</layoutData>
									</Label>
		              <ComboBox
		                id="idViewsComboBox"
										change="onViewChange">
										<layoutData>
											<l:GridData span="L6 M6 S10" />
										</layoutData>
									</ComboBox>
									<Label text="">
										<layoutData>
											<l:GridData span="L3 M3 S1" />
										</layoutData>
									</Label>
		            </f:content>
		          </f:SimpleForm>
		        </l:content>
		      </l:Grid>
				</Page>

				<!--
				████████╗ █████╗ ██████╗ ██╗     ███████╗███████╗
				╚══██╔══╝██╔══██╗██╔══██╗██║     ██╔════╝██╔════╝
				   ██║   ███████║██████╔╝██║     █████╗  ███████╗
				   ██║   ██╔══██║██╔══██╗██║     ██╔══╝  ╚════██║
				   ██║   ██║  ██║██████╔╝███████╗███████╗███████║
				   ╚═╝   ╚═╝  ╚═╝╚═════╝ ╚══════╝╚══════╝╚══════╝
				-->

				<Page
					id="idPageTables"
					enableScrolling="false"
					showHeader="false">
					<l:Grid
		        defaultSpan="L12 M12 S12"
		        width="auto">
		        <l:content>
							<Panel
								expandable="false"
								headerText="">
								<Text
									text="Select a database table from those listed below. Either begin typing the name of the table
									or select from the drop-down. It's important to ensure your	database user has privileges to read
									from the table you select here." />
							</Panel>
		          <f:SimpleForm
		            id="idRedshiftTableForm"
		            maxContainerCols="1"
		            editable="true"
		            layout="ResponsiveGridLayout"
		            labelSpanL="3"
		            labelSpanM="3"
		            emptySpanL="4"
		            emptySpanM="4"
		            columnsL="1"
		            columnsM="1"
		            class="editableForm">
		            <f:content>
									<Label text="">
										<layoutData>
											<l:GridData span="L3 M3 S1" />
										</layoutData>
									</Label>
		              <ComboBox
		                id="idTablesComboBox"
										change="onTableChange">
										<layoutData>
											<l:GridData span="L6 M6 S10" />
										</layoutData>
									</ComboBox>
									<Label text="">
										<layoutData>
											<l:GridData span="L3 M3 S1" />
										</layoutData>
									</Label>
		            </f:content>
		          </f:SimpleForm>
		        </l:content>
		      </l:Grid>
				</Page>
			</pages>
		</NavContainer>
	</Page>
</mvc:View>
