<mvc:View
	controllerName="view.data.Hana"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Page
		enableScrolling="false"
		showHeader="true">
		<customHeader>
			<Toolbar>
				<Button
					id="idCancelButton"
					text="Cancel"
					press="onCancelPress" />
				<ToolbarSpacer />
				<Title
					textAlign="Center"
					text="Configure connection" />
				<ToolbarSpacer />
				<Text
					text="" />
			</Toolbar>
		</customHeader>
		<footer>
			<Toolbar>
				<Button
					id="idBackButton"
					text="Back"
					enabled="false"
					press="onBackPress" />
				<ToolbarSpacer />
				<Button
					id="idNextButton"
					text="Next"
					enabled="true"
					press="onNextPress" />
			</Toolbar>
		</footer>
		<NavContainer
			id="idNavContainer">
			<pages>
				<Page
					id="idPageStart"
					showHeader="false"
					enableScrolling="true">
					<l:Grid
		        defaultSpan="L12 M12 S12"
		        width="auto">
		        <l:content>
		          <f:SimpleForm
		            id="idHanaConfigForm"
		            maxContainerCols="2"
		            editable="true"
		            layout="ResponsiveGridLayout"
		            labelSpanL="3"
		            labelSpanM="3"
		            emptySpanL="3"
		            emptySpanM="3"
		            columnsL="1"
		            columnsM="1"
		            class="editableForm sapUiMediumMarginTop">
		            <f:content>
		              <Label
		                text="Dataset name"
										required="true" />
		              <Input
		                id="idNameInput"
										value="{hana>/name}">
		              </Input>

		              <Label
		                text="HANA host"
										required="true" />
		              <Input
		                id="idHostInput"
										value="{hana>/host}"
										placeholder="e.g. hana.company.com">
		              </Input>

									<Label
		                text="Port"
										required="true" />
		              <Input
		                id="idPortInput"
										value="{hana>/port}"
										type="Number"
										placeholder="e.g. 30015">
		              </Input>

									<Label
		                text="User name" />
		              <Input
		                id="idUsernameInput"
										value="{hana>/username}">
		              </Input>

									<Label
		                text="Password" />
		              <Input
		                id="idPasswordInput"
										value="{hana>/password}"
										type="Password">
		              </Input>

									<Label
										text="" />
									<CheckBox
										id="idRememberPasswordCheckBox"
										selected="{hana>/remember}"
										text="Save username &amp; password?"/>

									<Label
										text="Query method" />
									<Select
										id="idQueryMethodSelect"
										value="{Hana>/query_type}">
										<items>
											<core:Item key="views" text="Hana View" />
											<core:Item key="tables" text="Hana Table" />
											<core:Item key="query" text="Write custom SQL query" />
										</items>
									</Select>
									<core:Icon
										id="idHelpIcon"
										src="sap-icon://question-mark"
										size="1.5rem"
										activeColor="#007cc0"
										hoverColor="#007cc0"
										press="onHelpIconPress"
										class="ffaIconTinyMarginTop">
										<core:layoutData>
											<l:GridData
												span="L1 M1 S1" />
										</core:layoutData>
									</core:Icon>
		            </f:content>
		          </f:SimpleForm>

							<f:SimpleForm
		            id="idHanaTestConsoleForm"
		            maxContainerCols="1"
		            editable="true"
		            layout="ResponsiveGridLayout"
		            labelSpanL="3"
		            labelSpanM="3"
		            emptySpanL="4"
		            emptySpanM="4"
		            columnsL="1"
		            columnsM="1"
		            class="editableForm sapUiMediumMarginTop">
		            <f:content>
									<TextArea
										id="idTestConsoleTextArea"
										rows="5"
										columns="20"
										visible="true"
										value="Console..."
										enabled="false">
										<layoutData>
											<l:GridData
												span="L12 M12 S12" />
										</layoutData>
									</TextArea>
		            </f:content>
		          </f:SimpleForm>
		        </l:content>
		      </l:Grid>
				</Page>

				<!--
				██████╗ ██╗   ██╗███████╗██████╗ ██╗   ██╗
			 ██╔═══██╗██║   ██║██╔════╝██╔══██╗╚██╗ ██╔╝
			 ██║   ██║██║   ██║█████╗  ██████╔╝ ╚████╔╝
			 ██║▄▄ ██║██║   ██║██╔══╝  ██╔══██╗  ╚██╔╝
			 ╚██████╔╝╚██████╔╝███████╗██║  ██║   ██║
			  ╚══▀▀═╝  ╚═════╝ ╚══════╝╚═╝  ╚═╝   ╚═╝
			  -->

				<Page
					id="idPageQuery"
					enableScrolling="false"
					showHeader="false">
					<l:Grid
		        defaultSpan="L12 M12 S12"
		        width="auto">
		        <l:content>
		          <f:SimpleForm
		            id="idHanaQueryForm"
		            maxContainerCols="1"
		            editable="true"
		            layout="ResponsiveGridLayout"
		            labelSpanL="3"
		            labelSpanM="3"
		            emptySpanL="4"
		            emptySpanM="4"
		            columnsL="1"
		            columnsM="1"
		            class="editableForm">
		            <f:content>
		              <Label
		                text="Please also supply an SQL query to run against the database. This
										query will form the basis of your data set">
										<layoutData>
											<l:GridData
												span="L12 M12 S12" />
										</layoutData>
									</Label>
		              <TextArea
		                id="idQueryTextArea"
										rows="5"
										columns="20"
										value="{hana>/query}"
										placeholder='e.g. select * from "SCHEMA"."package.path.to.data_table";'>
										<layoutData>
											<l:GridData
												span="L12 M12 S12" />
										</layoutData>
									</TextArea>
									<Button
										id="idHanaTestButton"
										press="onQueryPress"
										type="Emphasized"
										text="Test">
										<layoutData>
											<l:GridData
												span="L12 M12 S12" />
										</layoutData>
									</Button>
		            </f:content>
		          </f:SimpleForm>

							<f:SimpleForm
		            id="idHanaConsoleForm"
		            maxContainerCols="1"
		            editable="true"
		            layout="ResponsiveGridLayout"
		            labelSpanL="3"
		            labelSpanM="3"
		            emptySpanL="4"
		            emptySpanM="4"
		            columnsL="1"
		            columnsM="1"
		            class="editableForm">
		            <f:content>
									<TextArea
										id="idSaveConsoleTextArea"
										rows="10"
										columns="20"
										visible="true"
										value="Console..."
										enabled="false">
										<layoutData>
											<l:GridData
												span="L12 M12 S12" />
										</layoutData>
									</TextArea>
		            </f:content>
		          </f:SimpleForm>
		        </l:content>
		      </l:Grid>
				</Page>
			</pages>
		</NavContainer>
	</Page>
</mvc:View>
