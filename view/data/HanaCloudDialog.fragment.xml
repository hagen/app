<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
  <!--
		HANA configuration page
		TODO localise screen
	-->
  <Dialog
    id="idDataSetHanaCloudDialog"
    title="HANA Cloud System"
    class="sapUiPopupWithPadding">
    <beginButton>
      <Button
        text="Save"
        press="onHanaCloudSavePress"
        type="Emphasized"/>
    </beginButton>
    <endButton>
      <Button
        text="Cancel"
        press="onHanaCloudCancelPress" />
    </endButton>
    <content>
      <l:Grid
        defaultSpan="L12 M12 S12"
        width="auto">
        <l:content>
          <f:SimpleForm
            id="idHanaCloudConfigForm"
            maxContainerCols="2"
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanL="3"
            labelSpanM="3"
            emptySpanL="4"
            emptySpanM="4"
            columnsL="1"
            columnsM="1"
            class="editableForm">
            <f:content>
              <Label
                for="idHanaCloudLandscapeHostInput"
                text="Landscape host" />
              <Input
                id="idHanaCloudLandscapeHostInput">
              </Input>

							<Label
                for="idHanaCloudAccountNameInput"
                text="Account name" />
              <Input
                id="idHanaCloudAccountNameInput">
              </Input>

							<Label
                for="idHanaCloudUsernameInput"
                text="User name" />
              <Input
                id="idHanaCloudUsernameInput">
              </Input>

							<Label
                for="idHanaCloudPasswordInput"
                text="Password" />
              <Input
                id="idHanaCloudPasswordInput"
								type="Password">
              </Input>

							<CheckBox
								id="idHanaCloudRememberPasswordCheckBox"
								text="Save password"/>
            </f:content>
          </f:SimpleForm>
        </l:content>
      </l:Grid>
    </content>
  </Dialog>
</core:FragmentDefinition>
