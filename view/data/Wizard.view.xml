<mvc:View
	controllerName="view.data.Wizard"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
  xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:html="http://www.w3.org/1999/xhtml">

  <!-- TODO localise texts -->
	<Page
    id="idDataSetsWizardStartPage"
    title="Data source">
    <content>
      <html:div
        class="ffaDataSetWizardPage1Container">
        <l:Grid
          defaultSpan="L6 M6 S12"
          class="sapUiSmallMarginTop">
          <l:content>
            <ObjectListItem
              id="idDataSetWizardHanaCloudObjectListItem"
              title="SAP HANA"
              icon="sap-icon://sap-logo-shape"
              type="Active"
              press="onHanaItemPress"
              class="ffaDataSourceIconHana">
            </ObjectListItem>
            <ObjectListItem
              id="idRedshiftObjectListItem"
              title="AWS Redshift"
              icon="images/datasources/redshift.png"
              press="onRedshiftItemPress"
              type="Active"
              class="ffaDataSourceIconRedshift">
            </ObjectListItem>
            <ObjectListItem
              id="idHadoopObjectListItem"
              title="Hadoop"
              icon="sap-icon://FontMfizz/hadoop"
              type="Active">
            </ObjectListItem>
            <ObjectListItem
              id="idDataSetWizardExcelObjectListItem"
              title="Excel"
              icon="sap-icon://excel-attachment"
              type="Active"
              class="ffaDataSourceIconExcel">
            </ObjectListItem>
            <ObjectListItem
              id="idDataSetWizardGoogleDocObjectListItem"
              title="Google Docs Spreadsheet"
              icon="sap-icon://FontAwesome/google"
              type="Active"
              press="onGoogleSheetsPress"
              class="ffaDataSourceIconGoogle">
            </ObjectListItem>
						<ObjectListItem
              id="idDataSetWizardCsvObjectListItem"
              title="CSV file"
              icon="sap-icon://FontAwesome/file-text-o"
              type="Active"
              press="onCsvPress">
            </ObjectListItem>
          </l:content>
        </l:Grid>
      </html:div>
    </content>
  </Page>
</mvc:View>
