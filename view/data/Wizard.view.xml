<mvc:View
	controllerName="view.data.Wizard"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
  xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:html="http://www.w3.org/1999/xhtml">
  <!-- TODO localise texts -->
  <Page
    id="idDataSetsWizardStartPage"
    title="Data source">
    <content>
      <html:div
        class="ffaDataSetWizardPage1Container">
        <l:Grid
          defaultSpan="L12 M12 S12"
          class="sapUiSmallMarginTop">
          <l:content>
            <ObjectListItem
              id="idDataSetWizardHanaCloudObjectListItem"
              title="HANA Cloud Platform"
              intro="HCP system landscape"
              icon="sap-icon://sap-logo-shape"
              type="Active"
              press="onHanaCloudPress"
              class="ffaDataSourceIconHana">
            </ObjectListItem>
            <ObjectListItem
              id="idDataSetWizardHanaOnPremObjectListItem"
              title="HANA System"
              intro="Hosted/on-premise system"
              icon="sap-icon://building"
              type="Active"
              class="ffaDataSourceIconHana">
            </ObjectListItem>
            <ObjectListItem
              id="idDataSetWizardExcelObjectListItem"
              title="Excel spreadshet"
              intro="Local/remote Excel 97-2013 file"
              icon="sap-icon://excel-attachment"
              type="Active"
              class="ffaDataSourceIconExcel">
            </ObjectListItem>
            <ObjectListItem
              id="idDataSetWizardGoogleDocObjectListItem"
              title="Google Docs Spreadsheet"
              intro="Publicly available Google Docs Spreadshet"
              icon="sap-icon://FontAwesome/google"
              type="Active"
              press="onGoogleSheetsPress"
              class="ffaDataSourceIconGoogle">
            </ObjectListItem>
						<ObjectListItem
              id="idDataSetWizardCsvObjectListItem"
              title="CSV file"
              intro="Comma-separated values"
              icon="sap-icon://FontAwesome/file-text-o"
              type="Active"
              press="onCsvPress">
            </ObjectListItem>
          </l:content>
        </l:Grid>
      </html:div>
    </content>
  </Page>
</mvc:View>
