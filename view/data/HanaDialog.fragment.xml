<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
  <!--
		HANA configuration page
		TODO localise screen
	-->
  <Dialog
    id="idDataSetHanaDialog"
    title="HANA Cloud System"
    class="sapUiPopupWithPadding">
    <beginButton>
      <Button
        text="Save"
        press="onHanaSavePress"
        type="Emphasized"/>
    </beginButton>
    <endButton>
      <Button
        text="Cancel"
        press="onHanaCancelPress" />
    </endButton>
    <content>
      <l:Grid
        defaultSpan="L12 M12 S12"
        width="auto">
        <l:content>
          <f:SimpleForm
            id="idHanaCloudConfigForm"
            maxContainerCols="2"
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanL="3"
            labelSpanM="3"
            emptySpanL="4"
            emptySpanM="4"
            columnsL="1"
            columnsM="1"
            class="editableForm">
            <f:content>
              <Label
                text="Host" />
              <Input
                id="idHanaHostInput">
              </Input>

							<Label
                text="Port" />
              <Input
                id="idHanaPortInput"
								type="Number"
								placeholder="e.g. 30015">
              </Input>

							<Label
                text="User name" />
              <Input
                id="idHanaUsernameInput">
              </Input>

							<Label
                for="idHanaPasswordInput"
                text="Password" />
              <Input
                id="idHanaCloudPasswordInput"
								type="Password">
              </Input>

							<CheckBox
								id="idHanaRememberPasswordCheckBox"
								text="Save password?"/>
            </f:content>
          </f:SimpleForm>
        </l:content>
      </l:Grid>
    </content>
  </Dialog>
</core:FragmentDefinition>
