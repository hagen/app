<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
  <!--
		HANA On Premise configuration page
		TODO localise screen
	-->
  <Dialog
    id="idDataSetHanaOnPremiseDialog"
    title="HANA (On-Premise) System"
    class="sapUiPopupWithPadding">
    <beginButton>
      <Button
        text="Save"
        press="onHanaOnPremiseSavePress"/>
    </beginButton>
    <endButton>
      <Button
        text="Cancel"
        press="onHanaOnPremiseCancelPress" />
    </endButton>
    <content>
      <l:Grid
        defaultSpan="L12 M12 S12"
        width="auto">
        <l:content>
          <f:SimpleForm
            id="idHanaOnPremiseConfigForm"
            maxContainerCols="2"
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanL="3"
            labelSpanM="3"
            emptySpanL="4"
            emptySpanM="4"
            columnsL="1"
            columnsM="1"
            class="editableForm">
            <f:content>
              <Label
                text="Landscape host" />
              <Input
                id="idHanaOnPremiseHostInput">
              </Input>

							<Label
                text="Instance number" />
              <Input
                id="idHanaOnPremiseInstanceInput">
              </Input>

							<Label
                text="Mode" />
              <RadioGroup
                id="idHanaOnPremiseModeRadioGroup">
              </RadioGroup>

							<Label
                text="Description" />
              <Input
                id="idHanaOnPremiseDescriptionInput">
              </Input>
            </f:content>
          </f:SimpleForm>
        </l:content>
      </l:Grid>
    </content>
  </Dialog>
</core:FragmentDefinition>
