<mvc:View
	controllerName="com.ffa.hpc.view.data.EditRedshift"
	xmlns="sap.m"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		id="idRedshiftPage"
		showHeader="true">
		<customHeader>
			<Toolbar>
				<Button
					id="idCancelButton"
					text="Cancel"
					press="onCancelPress" />
				<ToolbarSpacer />
				<Title
					text="AWS Redshift" />
				<ToolbarSpacer />
				<Button
					id="idDoneButton"
					text="Done"
					press="onDonePress" />
			</Toolbar>
		</customHeader>
		<content>
			<l:Grid
				defaultSpan="L12 M12 S12"
				class="sapUiSmallMarginTop"
				width="auto">
				<l:content>
					<f:SimpleForm
						id="idRedshiftConfigForm"
						maxContainerCols="2"
						editable="true"
						layout="ResponsiveGridLayout"
						labelSpanL="2"
						labelSpanM="2"
						emptySpanL="4"
						emptySpanM="4"
						columnsL="1"
						columnsM="1"
						class="editableForm">
						<f:content>
							<Label
								text="Name">
								<layoutData>
									<l:GridData
										span="L2 M2 S12" />
								</layoutData>
							</Label>
							<Input
								id="idNameInput"
								change="onInputChange"
								value="{dataset>name}">
								<layoutData>
									<l:GridData
										span="L10 M10 S12" />
								</layoutData>
								<customData>
									<core:CustomData key="original" value="{dataset>name}" />
								</customData>
							</Input>

							<Label
								text="Endpoint">
								<layoutData>
									<l:GridData
										span="L2 M2 S12" />
								</layoutData>
							</Label>
							<Input
								id="idEndpointInput"
								value="{dataset>Redshift/endpoint}"
								enabled="false">
								<layoutData>
									<l:GridData
										span="L10 M10 S12" />
								</layoutData>
							</Input>

							<Label
								text="Database">
								<layoutData>
									<l:GridData
										span="L2 M2 S12" />
								</layoutData>
							</Label>
							<Input
								id="idDatabaseInput"
								value="{dataset>Redshift/database}"
								enabled="false">
								<layoutData>
									<l:GridData
										span="L10 M10 S12" />
								</layoutData>
							</Input>

							<Label
								text="Port">
								<layoutData>
									<l:GridData
										span="L2 M2 S12" />
								</layoutData>
							</Label>
							<Input
								id="idPortInput"
								value="{dataset>Redshift/port}"
								type="Number"
								enabled="false">
								<layoutData>
									<l:GridData
										span="L10 M10 S12" />
								</layoutData>
							</Input>

							<Label
								text="User name">
								<layoutData>
									<l:GridData
										span="L2 M2 S12" />
								</layoutData>
							</Label>
							<Input
								id="idUsernameInput"
								change="onInputChange"
								value="{dataset>Redshift/username}">
								<layoutData>
									<l:GridData
										span="L10 M10 S12" />
								</layoutData>
								<customData>
									<core:CustomData key="original" value="{dataset>Redshift/username}" />
								</customData>
							</Input>

							<Label
								text="Password">
								<layoutData>
									<l:GridData
										span="L2 M2 S12" />
								</layoutData>
							</Label>
							<Input
								id="idPasswordInput"
								change="onInputChange"
								value="{dataset>Redshift/password}"
								type="Password">
								<layoutData>
									<l:GridData
										span="L10 M10 S12" />
								</layoutData>
								<customData>
									<core:CustomData key="original" value="{dataset>Redshift/password}" />
								</customData>
							</Input>

							<Label
								text=""><!-- empty text -->
								<layoutData>
									<l:GridData
										span="L2 M2 S12" />
								</layoutData>
							</Label>
							<CheckBox
								id="idRememberCheckBox"
								selected="{= ${dataset>Redshift/remember} === 'X' ? true : false }"
								text="Save username &amp; password?">
								<layoutData>
									<l:GridData
										span="L10 M10 S12" />
								</layoutData>
								<customData>
									<core:CustomData key="original" value="{dataset>Redshift/remember}" />
								</customData>
							</CheckBox>

							<TextArea
								id="idQueryTextArea"
								rows="5"
								value="{dataset>Redshift/query}"
								enabled="false">
								<layoutData>
									<l:GridData
										span="L12 M12 S12" />
								</layoutData>
							</TextArea>
						</f:content>
					</f:SimpleForm>
				</l:content>
			</l:Grid>
			<core:Fragment id="idDefinitionFragment" fragmentName="com.ffa.hpc.view.data.EditDefinition" type="XML" />
		</content>
	</Page>
</mvc:View>
