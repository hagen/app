<mvc:View
	controllerName="com.ffa.hpc.view.data.CreateSheets"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Page
		enableScrolling="false"
		showHeader="true">
		<customHeader>
			<Toolbar>
				<Button
					id="idCancelButton"
					text="Cancel"
					press="onCancelPress" />
				<ToolbarSpacer />
				<Title
					textAlign="Center"
					text="Configure Google Sheet" />
				<ToolbarSpacer />
				<Text
					text="" />
			</Toolbar>
		</customHeader>
		<footer>
			<Toolbar>
				<Button
					id="idBackButton"
					text="Back"
					enabled="false"
					press="onBackPress" />
				<ToolbarSpacer />
				<Button
					id="idNextButton"
					text="Next"
					enabled="true"
					press="onNextPress" />
			</Toolbar>
		</footer>
		<NavContainer
			id="idNavContainer">
			<pages>

				<!--
				 ██████╗ ██████╗ ███╗   ██╗███████╗██╗ ██████╗
				██╔════╝██╔═══██╗████╗  ██║██╔════╝██║██╔════╝
				██║     ██║   ██║██╔██╗ ██║█████╗  ██║██║  ███╗
				██║     ██║   ██║██║╚██╗██║██╔══╝  ██║██║   ██║
				╚██████╗╚██████╔╝██║ ╚████║██║     ██║╚██████╔╝
				╚═════╝ ╚═════╝ ╚═╝  ╚═══╝╚═╝     ╚═╝ ╚═════╝
				-->

				<Page
					id="idPage1"
					enableScrolling="false"
					showHeader="false">
					<l:Grid
						defaultSpan="L12 M12 S12"
						width="auto">
						<l:content>
							<f:SimpleForm
								id="idConfigForm"
								maxContainerCols="2"
								editable="true"
								layout="ResponsiveGridLayout"
								labelSpanL="3"
								labelSpanM="3"
								emptySpanL="4"
								emptySpanM="4"
								columnsL="1"
								columnsM="1"
								class="editableForm sapUiMediumMarginTop">
								<f:content>
									<Label
										text="Data set name"
										required="true">
									</Label>

									<Input
										id="idNameInput">
										<layoutData>
											<l:GridData
												span="L6 M6 S5" />
										</layoutData>
									</Input>

									<Label
										text="Google Sheets Key"
										required="true">
									</Label>

									<Input
										id="idKeyInput">
										<layoutData>
											<l:GridData
												span="L5 M5 S4" />
										</layoutData>
									</Input>

									<Button
										id="idHelpButton"
										icon="sap-icon://FontAwesome/question"
										type="Transparent"
										press="onHelpPress">
										<layoutData>
											<l:GridData
												span="L1 M1 S1" />
										</layoutData>
									</Button>

									<Label
										text="" />
									<CheckBox
										id="idHeadersCheckbox"
										selected="true"
										text="Spreadsheet has headers?"/>
								</f:content>
							</f:SimpleForm>

							<f:SimpleForm
		            id="idTestConsoleForm"
		            maxContainerCols="1"
		            editable="true"
		            layout="ResponsiveGridLayout"
		            labelSpanL="3"
		            labelSpanM="3"
		            emptySpanL="4"
		            emptySpanM="4"
		            columnsL="1"
		            columnsM="1"
		            class="editableForm sapUiMediumMarginTop">
		            <f:content>
									<TextArea
										id="idTestConsoleTextArea"
										rows="10"
										cols="20"
										visible="true"
										value="Console..."
										enabled="false">
										<layoutData>
											<l:GridData
												span="L12 M12 S12" />
										</layoutData>
									</TextArea>
		            </f:content>
		          </f:SimpleForm>
						</l:content>
					</l:Grid>
				</Page>

				<!--
				██████╗ ███████╗███████╗██╗███╗   ██╗██╗████████╗██╗ ██████╗ ███╗   ██╗
				██╔══██╗██╔════╝██╔════╝██║████╗  ██║██║╚══██╔══╝██║██╔═══██╗████╗  ██║
				██║  ██║█████╗  █████╗  ██║██╔██╗ ██║██║   ██║   ██║██║   ██║██╔██╗ ██║
				██║  ██║██╔══╝  ██╔══╝  ██║██║╚██╗██║██║   ██║   ██║██║   ██║██║╚██╗██║
				██████╔╝███████╗██║     ██║██║ ╚████║██║   ██║   ██║╚██████╔╝██║ ╚████║
				╚═════╝ ╚══════╝╚═╝     ╚═╝╚═╝  ╚═══╝╚═╝   ╚═╝   ╚═╝ ╚═════╝ ╚═╝  ╚═══╝
				-->

				<Page
					id="idPage2"
					enableScrolling="true"
					showHeader="false">
					<Panel
						headerText=""
						class="sapUiSmallMarginTop">
						<Text text="These are the columns I could find in your spreadsheet. Please
							review them, make sure everything looks okay, then Save. Please also take note
							that at least one of these columns must be of type Date. If none of these columns
							represent date, please add this column to the spreadsheet. However, if your Date
							column is here, but isn't listed as type Date, you can change the column data type
							by hitting the data type link." />
					</Panel>
					<!-- Column selection -->
					<core:Fragment
						id="idFieldsFragment"
						fragmentName="com.ffa.hpc.view.data.SchemaFields"
						type="XML" />
				</Page>
			</pages>
		</NavContainer>
	</Page>
</mvc:View>
