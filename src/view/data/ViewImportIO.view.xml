<mvc:View
	controllerName="view.data.ViewImportIO"
	xmlns="sap.m"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		id="idImportIOPage"
		showHeader="true"
		showNavButton="{device>isPhone}"
		navButtonPress="onNavBackPress"
		title="import.io">
		<headerContent>
			<Button
				id="idEditButton"
				text="Edit"
				press="onEditPress" />
		</headerContent>
		<content>
			<l:Grid
				defaultSpan="L12 M12 S12"
				class="sapUiSmallMarginTop"
				width="auto">
				<l:content>
					<f:SimpleForm
						id="idImportIOConfigForm"
						maxContainerCols="2"
						editable="true"
						layout="ResponsiveGridLayout"
						labelSpanL="2"
						labelSpanM="2"
						emptySpanL="4"
						emptySpanM="4"
						columnsL="1"
						columnsM="1"
						class="editableForm">
						<f:content>
							<Label
								text="Name">
								<layoutData>
									<l:GridData
										span="L2 M2 S12" />
								</layoutData>
							</Label>
							<Input
								id="idNameInput"
								value="{dataset>name}"
								enabled="false">
								<layoutData>
									<l:GridData
										span="L10 M10 S12" />
								</layoutData>
							</Input>

							<Label
								text="Simple API integration URL">
								<layoutData>
									<l:GridData
										span="L2 M2 S12" />
								</layoutData>
							</Label>
							<TextArea
								id="idUrlInput"
								rows="10"
								enabled="false"
								value="{dataset>ImportIO/url}">
								<layoutData>
									<l:GridData
										span="L10 M10 S12" />
								</layoutData>
							</TextArea>
						</f:content>
					</f:SimpleForm>
				</l:content>
			</l:Grid>
			<core:Fragment id="idDefinitionFragment" fragmentName="view.data.ViewDefinition" type="XML" />
		</content>
	</Page>
</mvc:View>
