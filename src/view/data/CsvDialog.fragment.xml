<core:FragmentDefinition
	xmlns="sap.m"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
  <!-- Csv details and upload page -->
  <Dialog
    id="idDataSetCsvDialog"
    title="CSV file"
    class="sapUiPopupWithPadding"
		contentWidth="{= ${device>isPhone} ? '600px' : ${device>isTouch} ? '800px' : '900px' }">
    <beginButton>
      <Button
        text="Save"
        press="onCsvSavePress"/>
    </beginButton>
    <endButton>
      <Button
        text="Cancel"
        press="onCsvCancelPress" />
    </endButton>
    <content>
      <l:Grid
        defaultSpan="L12 M12 S12"
        width="auto">
        <l:content>
          <f:SimpleForm
            id="idCsvConfigForm"
            maxContainerCols="2"
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanL="3"
            labelSpanM="3"
            emptySpanL="4"
            emptySpanM="4"
            columnsL="1"
            columnsM="1"
            class="editableForm">
            <f:content>
							<Label
                text="Data set name"
								required="true">
								<layoutData>
									<l:GridData
										span="L3 M3 S12" />
								</layoutData>
							</Label>
              <Input
                id="idCsvName">
								<layoutData>
									<l:GridData
										span="L9 M9 S12" />
								</layoutData>
							</Input>

              <Label
                text="Separator character"
								required="true"
								textAlign="Begin">
								<layoutData>
									<l:GridData
										span="L3 M3 S10" />
								</layoutData>
							</Label>
              <Input
                id="idCsvSeparator"
								maxLength="3"
								value=",">
								<layoutData>
									<l:GridData
										span="L1 M1 S2" />
								</layoutData>
							</Input>

							<Text
								text=" "
								visible="{= ${device>isPhone} ? false : true }">
								<layoutData>
									<l:GridData
										span="L1 M1 S12" />
								</layoutData>
							</Text>

							<CheckBox
								id="idCsvHeadersCheckbox"
								selected="true"
								text="File has headers?">
								<layoutData>
									<l:GridData
										span="L7 M7 S12" />
								</layoutData>
							</CheckBox>

							<UploadCollection
								id="idCsvUploadCollection"
								fileType="csv,txt"
        				showSeparators="None"
								multiple="false"
								noDataText="No file selected"
								change="onCsvUploadChange"
								uploadUrl="../fa/ppo/drop3/xs/services/dataset.xsodata/CsvFile">
								<layoutData>
									<l:GridData
										span="L12 M12 S12" />
								</layoutData>
							</UploadCollection>
            </f:content>
          </f:SimpleForm>
        </l:content>
      </l:Grid>
    </content>
  </Dialog>
</core:FragmentDefinition>
