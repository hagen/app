<mvc:View
	controllerName="view.plans.Plans"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page
		id="idPlansPage"
		enableScrolling="false"
		showHeader="false"
		showNavButton="false"
		class="ffaPlansPageDashBg">
		<content>
			<!-- Spiders animation by GreenSock.com -->
			<html:canvas id="idSpiders" class="spiders" />
			<!-- Main login content -->
			<html:div
				id="idDivPlansPanelWrapper"
				class="ffaPlansPanelCenter">
				<TileContainer
					id="idPlansTileContainer"
					allowAdd="false"
					editable="false"
					tiles="{
						path : 'profile>/PlanTypes',
						sorter : {
							path : 'order',
							descending: false
						}
					}">
					<StandardTile
						icon="sap-icon://{profile>icon}"
						info="{profile>info}"
						infoState="{profile>info_state}"
						type="{profile>type}"
						number="{profile>number}"
						numberUnit="{profile>unit}"
						title="{profile>title}"
						press="onTilePress" />
				</TileContainer>
			</html:div>
		</content>
		<dependents>
			<Dialog
				id="idPlanDetailsDialog"
				horizontalScrolling="false"
				title="{profile>info}">
				<beginButton>
					<Button
						id="idPlansBeginButton"
						text="{profile>action}"
						press="onGoPress">
						<customData>
							<core:CustomData key="planType" value="{profile>id}" />
						</customData>
					</Button>
				</beginButton>
				<endButton>
					<Button
						id="idPlansFreeBeginButton"
						text="Close"
						press="onClosePress"/>
				</endButton>
				<content>
					<List
						id="idPlanDetailsList"
						listMode="None"
						items="{
							path : 'profile>Details',
							sorter: {
								path : 'order',
								descending: false
							}
						}">
						<StandardListItem
							title="{profile>title}"
							icon="sap-icon://{profile>icon}"
							info="{profile>info}"
							infoState="{profile>info_state}"
							type="Inactive" />
					</List>
				</content>
			</Dialog>
		</dependents>
	</Page>
</mvc:View>
