<mvc:View
	controllerName="view.forecasts.Favorites"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		id="idFavoritesPage"
		title="Favourites"
		enableScrolling="false"
		showNavButton="false"
		navButtonPress="onNavUpPress">
		<footer>
			<Toolbar
				id="idFavoritesToolbar">
			</Toolbar>
		</footer>
		<content>
			<TileContainer
				id="idFavoritesTileContainer"
				allowAdd="false" />

			<!-- No favorites message page -->
			<MessagePage
				id="idMessagePage"
				icon="sap-icon://favorite"
				class="ffaNoFavouritesYellowIcon"
				showHeader="false"
				showNavButton="false"
				description="Favourite forecasts you want to find later"
				text="You don't have any favourites" /> <!-- TODO Localisation -->
		</content>
	</Page>
</mvc:View>
