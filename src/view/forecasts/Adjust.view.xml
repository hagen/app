<mvc:View
  controllerName="com.ffa.hpc.view.forecasts.Adjust"
  xmlns:chart="com.ffa.hpc.thirdparty.chartjs"
  xmlns:core="sap.ui.core"
  xmlns:l="sap.ui.layout"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
	xmlns:html="http://www.w3.org/1999/xhtml">
  <NavContainer
    id="idNavContainer">
    <pages>
      <Page
        enableScrolling="false"
        id="idAdjustPage"
        title="{forecast>Forecast/name}"
        class="sapUiContentPadding">
        <customHeader>
					<Toolbar
						id="idWorkspaceChartToolbar"
						class="ffaWhiteToolbarWithPadding">
            <Button
							id="idDoneButton"
              text="Done"
							type="Default"
							press="onDonePress" />
						<BusyIndicator
							id="idWorkspaceBusyIndicator"
							size="1.4em"
							visible="false "/>
						<ToolbarSpacer />
						<Link
							id="idClearRangeLink"
							text="{= ${range>/selected} === 1 ? 'Clear ' + ${range>/selected} + ' point' : 'Clear ' + ${range>/selected} + ' points' }"
							visible="{= ${range>/selected} > 0 }"
							press="onClearRangePress"/>
						<Button
							id="idDateRangeButton"
							text="Select date range"
							type="Default"
							press="onDateRangePress" />
						<Button
							id="idGainButton"
							icon="sap-icon://FontAwesome/sliders"
							title="Edit forecast"
							type="Transparent"
							press="onGainPress" />
					</Toolbar>
        </customHeader>
        <footer>
          <Toolbar>
            <Button
              id="idCancelButton"
              text="Cancel"
              press="onCancelPress" />
						<ToolbarSpacer />
            <Button
              icon="sap-icon://download"
              enabled="{device>/isDesktop}"
              type="Transparent"
              press="onExportPress" />
          </Toolbar>
        </footer>
        <content>
          <html:div
						id="idVizContainer"
						class="ffaOverviewChartContainer"/>
        </content>
      </Page>
      <MessagePage
        id="idMessagePage"
        description="Sorry there - couldn't get hold of the thing you want"
        icon="sap-icon://FontAwesome/question-circle"
        showHeader="true"
        showNavButton="true"
        text="That's a 404"
        navButtonPress="onNavBackPress" />
    </pages>
  </NavContainer>
</mvc:View>
