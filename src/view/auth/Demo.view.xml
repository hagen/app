<mvc:View
	controllerName="com.ffa.hpc.view.auth.Demo"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page
		id="idLoginPage"
		enableScrolling="false"
		showHeader="false"
		showNavButton="false"
		class="ffaLoginPageDashBg">
		<content>

			<!-- Spiders animation by GreenSock.com
			<html:canvas id="idSpiders" class="spiders" />-->

			<!-- Main login content -->
			<html:div
				id="idDivLoginPanelWrapper"
				class="ffaLoginPanelCenter">
				<IconTabBar
					id="idSignInIconTabBar"
					expanded="true"
					select="onTabSelect"
					applyContentPadding="false">
					<items>
						<IconTabFilter
							key="signin"
							text="Sign in">
							<l:Grid
								defaultSpan="L12 M12 S12"
								width="auto">
								<l:content>
									<f:SimpleForm
										id="idLoginForm"
										maxContainerCols="2"
										editable="true"
										layout="ResponsiveGridLayout"
										labelSpanL="3"
										labelSpanM="3"
										emptySpanL="4"
										emptySpanM="4"
										columnsL="1"
										columnsM="1"
										class="editableForm">
										<f:content>
											<Input
												id="idLoginEmail"
												type="Email"
												value=""
												placeholder="E-mail" />
											<Input
												id="idLoginPassword"
												type="Password"
												value=""
												placeholder="Password" />
											<CheckBox
												id="idLoginCheckbox"
												text="Remember me"
												textAlign="Begin">
												<layoutData>
													<l:GridData
														span="L6 M6 S6" />
												</layoutData>
											</CheckBox>
											<Button
												id="idLoginButton"
												text="SIGN IN"
												type="Emphasized"
												class="ffaLoginButton"
												enabled="true"
												press="onSignInButtonPress">
												<layoutData>
													<l:GridData
														span="L6 M6 S6" />
												</layoutData>
											</Button>
										</f:content>
									</f:SimpleForm>
								</l:content>
							</l:Grid>
							<l:Grid
								defaultSpan="L6 M6 S12"
								width="auto">
								<l:content>
									<Title
										id="idLoginSeparator"
										text="OR"
										level="H4"
										textAlign="Center"
										titleStyle="H4"
										width="100%">
										<layoutData>
											<l:GridData
												span="L12 M12 S12" />
										</layoutData>
									</Title>
									<Button
										id="idLoginButtonGoogle"
										icon="sap-icon://FontAwesome/google"
										text="Sign in with Google"
										class="ffaLoginButtonGoogle"
										press="onGooglePress" />
									<Button
										id="idLoginButtonLinkedIn"
										icon="sap-icon://FontAwesome/linkedin"
										text="Sign in with LinkedIn"
										class="ffaLoginButtonLinkedIn"
										press="onLinkedInPress" />
									<Button
										id="idLoginButtonScn"
										icon="sap-icon://sap-logo-shape"
										text="Sign in with SCN"
										class="ffaLoginButtonScn"
										enabled="false"
										press="onSCNPress" />
									<Button
										id="idLoginButtonTwitter"
										icon="sap-icon://FontAwesome/twitter"
										text="Sign in with Twitter"
										class="ffaLoginButtonTwitter"
										press="onTwitterPress" />
								</l:content>
							</l:Grid>
						</IconTabFilter>

						<IconTabFilter
							key="demo"
							text="Demo">
							<l:Grid
								defaultSpan="L12 M12 S12"
								width="auto">
								<l:content>
									<f:SimpleForm
										id="idDemoForm"
										maxContainerCols="2"
										editable="true"
										layout="ResponsiveGridLayout"
										labelSpanL="3"
										labelSpanM="3"
										emptySpanL="4"
										emptySpanM="4"
										columnsL="1"
										columnsM="1"
										class="editableForm">
										<f:content>
											<Text
												text="To log in with our demo/evaluation account, simply
												press the button below. This account is pre-populated with
												a number of data sets and forecasts for you to explore." />
											<Text
												text="NOTE: this account is refreshed nightly and does not
												allow the creation of new data sets and/or forecasts." />
											<Button
												id="idDemoButton"
												text="DEMO LOG IN"
												type="Emphasized"
												class="ffaLoginButton"
												enabled="true"
												press="onDemoButtonPress">
												<layoutData>
													<l:GridData
														span="XL12 L12 M12 S12" />
												</layoutData>
											</Button>
										</f:content>
									</f:SimpleForm>
									<Link
										id="idRegisterLink"
										text="Ready to register!"
										width="100%"
										textAlign="Right"
										press="onRegisterLinkPress">
										<layoutData>
											<l:GridData
												span="XL12 L12 M12 S12" />
										</layoutData>
									</Link>
								</l:content>
							</l:Grid>
						</IconTabFilter>
					</items>
				</IconTabBar>
			</html:div>

			<!-- Already logged in -->
			<Panel
				id="idLogOutPanel"
				class="ffaLoginPanelCenter"
				width="60%"
				visible="false">
				<l:Grid
					defaultSpan="L6 M6 S12"
					width="auto">
					<l:content>
						<Title
							id="idLoggedInTitle"
							text="Logged in!"
							level="H2"
							textAlign="Center"
							titleStyle="H2"
							width="100%">
							<layoutData>
								<l:GridData
									span="L12 M12 S12" />
							</layoutData>
						</Title>
						<Text
							text="You're already logged in - isn't that fantastic?! To log out, you may navigate
							to your Profile page via. the Dash, or press the log out button below.">
							<layoutData>
								<l:GridData
									span="L12 M12 S12" />
							</layoutData>
						</Text>
						<Button
							id="idLogoutButton"
							icon="sap-icon://FontAwesome/sign-out"
							text="Log out"
							type="Emphasized"
							width="100%"
							press="onLogoutPress">
							<layoutData>
								<l:GridData
									span="XL12 L12 M12 S12" />
							</layoutData>
						</Button>
					</l:content>
				</l:Grid>
			</Panel>
		</content>
	</Page>
</mvc:View>
